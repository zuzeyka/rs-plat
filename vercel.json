{
    "version": 2,
    "builds": [
        { "src": "api/**/*.ts", "use": "@vercel/node" },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "dist" }
        }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "/api/$1.ts" },
        { "src": "/(.*)", "dest": "/index.html" }
    ]
}
